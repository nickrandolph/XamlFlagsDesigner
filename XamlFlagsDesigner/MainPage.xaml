<Page x:Class="XamlFlagsDesigner.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="using:XamlFlagsDesigner"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid >
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Optimised XAML" 
                    Click="OptimisedXAML_Click"
                    HorizontalAlignment="Stretch"/>
            <Button Content="UserControl"
                    Click="UserControl_Click"
                    HorizontalAlignment="Stretch" />
            <Button Content="Container Style"
                    Click="ContainerStyle_Click"
                    HorizontalAlignment="Stretch" />
        </StackPanel>
    </Grid>
</Page>
